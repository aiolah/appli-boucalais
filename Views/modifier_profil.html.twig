{% extends "index.html.twig" %}
{% block section %}

{% if message is defined and succes == "non" %}
    <div class="alert alert-danger" role="alert">{{message}}</div>
{% endif %}

<div class="mb-3">
    <a href="?action=profil">← Mon profil</a>
</div>

<h2>Modifier mon profil</h2>

<form method="post" action="?action=modifier-profil" class="mt-5">
    <div class="form-group row">
        <label class="col-lg-2 col-sm-4 col-form-label" for="nom-organisme">Nom du groupe</label>
        <div class="col-lg-4 col-sm-8">
            <input type="text" name="nom_organisme" id="nom-organisme" class="form-control" value="{{user.nomGroupe}}" required>
        </div>
    </div>

    <div class="form-group row">
        <h6 class="col-lg-12 mt-4 mb-4"><strong>Coordonnées du responsable</strong></h6>
        <label class="col-lg-2 col-sm-4 col-form-label" for="prenom">Prénom</label>
        <div class="col-lg-4 col-sm-8">
            <input type="text" name="prenom" id="prenom" class="form-control" value="{{user.prenom}}" required>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-sm-4 col-form-label" for="nom">Nom</label>
        <div class="col-lg-4 col-sm-8">
            <input type="text" name="nom" id="nom" class="form-control" value="{{user.nom}}" required>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-sm-4 col-form-label" for="email">E-mail</label>
        <div class="col-lg-4 col-sm-8">
            <input type="email" name="email" id="email" class="form-control" value="{{user.mail}}" required>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-2 col-sm-4 col-form-label" for="telephone">Téléphone</label>
        <div class="col-lg-4 col-sm-8">
            <input type="tel" name="telephone" id="telephone" class="form-control" value="{{user.telephone}}" required>
        </div>
    </div>

    <input class="mt-3" type="submit" name="modifier-profil" value="Enregistrer">
</form>

{% endblock %}