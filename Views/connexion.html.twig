	<script>

  {# Si la connexion est réussie, on redirige vers la page accueil #}
  {% if acces == "oui" %}
  
    if(document.location.href == "http://leboucalais.fr/application/?action=connexion")
    {
        setTimeout("window.location='http://leboucalais.fr/application/?action=accueil'", 1000);
    }

