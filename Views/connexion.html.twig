  <div class="container">
    {% if message is defined and acces == "non" %}
        <div class="alert alert-danger" role="alert">{{ message }}</div>
    {% elseif message is defined and acces == "oui" %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endif %}


    {% if acces == "non" %}
      <form method="post" action="?action=connexion" class="well">
      <fieldset>
        <legend>Entrez vos informations de connexion</legend><br/>
          <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
            <div class="col-sm-4">
              <input  type="text" id="email" class="form-control form-control-sm" name="email" required placeholder="" />
            </div>
          </div>
          <div class="form-group row">
            <label for="logpasswdin" class="col-sm-2 col-form-label col-form-label-sm">Mot de passe</label>
            <div class="col-sm-4">
              <input  type="password" id="mdp" class="form-control form-control-sm button" name="mdp" required placeholder="" />
            </div>
          </div><br/>
        <input type="submit" name="connexion" class="bouton" value="Se connecter"/>
      </fieldset>
      </form>

      <a href="?action=recuperer-mdp">Mot de passe oublié ?</a>
    {% endif %}
