{% extends "index.html.twig" %}
{% block section %}

<div>
    <h3 class="mb-4">Ajout d'une option</h3>
    <form method="post" action="?action=ajouter-option">
        <div class="form-group row">
            <label for="nomOption" class="col-4 col-form-label">Nom de l'option</label>
            <input type="text" id="nomOption" class="col-6 form-control" name="NOM_OPTION" placeholder="Nom de l'option" required>
        </div>
        <div class="form-group row">
            <label for="prixOption" class="col-4 col-form-label">Prix indépendant du nombre de personnes et de la durée du séjour</label>
            <input type="number" id="prixOption" class="col-1 form-control" name="PRIX_OPTION_UNITE" placeholder="0" min="0" required>
        </div>
        <div class="form-group row">
            <label for="descriptionOption" class="col-4 col-form-label">Description</label>
            <textarea class="col-6 form-control" id="descriptionOption" name="DESCRIPTION_OPTION" width="512" placeholder="Description de l'option" required></textarea>
        </div>
        <div class="form-group row">
            <label for="afficher" class="col-4 col-form-label">Aficher lors de la composition d'un devis :</label>
            <select name="AFFICHAGE_OPTION" class="col-1 form-control">
                <option value="1">Oui</option>
                <option value="0">Non</option>
            </select>
        </div>

        <input type="submit" name="ajout-option" value="Ajouter l'option" class="mt-3">
    </form>
</div>

{% endblock %}